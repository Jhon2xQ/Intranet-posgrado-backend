spring.application.name=intranet

# Configuración de la base de datos
spring.datasource.url=${DB_URL}
spring.datasource.username=${DB_USER}
spring.datasource.password=${DB_PASSWORD}
spring.datasource.driver-class-name=com.microsoft.sqlserver.jdbc.SQLServerDriver

# Configuración de JPA (solo lectura)
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=false
spring.jpa.database-platform=org.hibernate.dialect.SQLServerDialect
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl

# JWT
app.jwt.secret=${JWT_SECRET:your-jwt-secret-key-your-jwt-secret-key}
app.jwt.access-expiration=${JWT_ACCESS_EXPIRATION:300000}
app.jwt.refresh-expiration=${JWT_REFRESH_EXPIRATION:900000}

# COOKIE
app.cookie.secure=${COOKIE_SECURE:false}
app.cookie.same-site=${COOKIE_SAMESITE:None}
app.cookie.access-max-age=${COOKIE_ACCESS_MAX_AGE:300}
app.cookie.refresh-max-age=${COOKIE_REFRESH_MAX_AGE:900}
app.cookie.path=${COOKIE_PATH:/auth/refresh}

#MAIL
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=${MAIL_USERNAME}
spring.mail.password=${MAIL_PASSWORD}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true